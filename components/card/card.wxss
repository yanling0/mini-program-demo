
.container{
  width: 750rpx;
  box-sizing: border-box;
  padding: 30rpx 30rpx 0 30rpx;
  background-color: #eee;
  overflow: scroll;
}

.card{
  width: 100%;
  height: 350rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.course_title{
  padding: 10rpx 40rpx;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
}

.card .title{
  font-weight: bold;
  flex: 1;
}

.card .type{
  flex: 0.6;
}

.d-flex-row{
  display: flex;
  align-items: center;
}

.d-flex-column{
  display: flex;
  flex-direction: column;
}

.add_or_remove_btn{
  border-radius: 0 !important;
  padding: 0 20rpx !important;
  font-size: 22rpx !important;
}

button::after {
  border: none;
}

.course_content{
  box-sizing: border-box;
  padding: 30rpx 40rpx;
}

.flex-1{
  flex: 1;
}

.mb-10{
  margin-bottom: 10rpx;
}

