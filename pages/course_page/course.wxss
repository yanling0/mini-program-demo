.bar {
  position: sticky;
  top: 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  background: #fff;
  /* box-shadow: 0 30rpx 30rpx -30rpx rgba(200, 200, 200, 0.6); */
}

.filter_title{
  justify-content: center;
  align-items: center;
}

.filter_title text{
  width: 120rpx;
  text-align: center;
  font-size: 24rpx;
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.filter_content{
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.377);
  position: fixed;
  top: 79rpx;
  z-index: 998;
}

.scroll{
  background-color: #fff;
  padding: 10rpx;
}

.option_card{
  padding: 20rpx;
  box-sizing: border-box;
  width: 750rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.option{
  color: #aaa;
  width: auto;
  line-height: 40rpx;
  border-radius: 20px;
  background-color: rgb(240, 240, 240);
  font-size: 23rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #ccc;
  padding: 0 30rpx;
  margin: 15rpx;
}

.option.active{
  color: blue;
  border: 2rpx solid blue;
}

.submit{
  width: 140rpx;
  background-color: blue;
  font-size: 25rpx;
  color: #fff;
  text-align: center;
  padding: 5rpx 0;
}

.clear {
  color: blue;
  font-size: 25rpx;
}

.mb-30{
  margin-bottom: 30rpx;
}



